{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
      "src/**/*",
      "vite.config.*",
      ".eslintrc.js",
      "tailwind.config.js",
      "postcss.config.js"
  ],
  "compilerOptions": {
      "baseUrl": ".",
      "paths": {
          "@/*": ["src/*"]
      },
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": false
  },
    "include": ["src"]

}
