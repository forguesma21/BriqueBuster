{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
      "src/**/*",
      "vite.config.*",
      ".eslintrc.js",
      "tailwind.config.js",
      "postcss.config.js"
  ],
  "compilerOptions": {
      "baseUrl": ".",
      "paths": {
          "@/*": ["./src/*"]
      },

      // Node.js
      // "module": "node16",
      "moduleResolution": "node",

      // JavaScript disablement
      "allowJs": false
  }
}
